<p id="notice"><%= notice %></p>

<h1>Listing Shains</h1>

<table>
  <thead>
    <tr>
      <th>Num</th>
      <th>Name 1</th>
      <th>Name 2</th>
      <th>Name 1 kana</th>
      <th>Name 2 kana</th>
      <th>Busho</th>
      <th>Shain kbn</th>
      <th>Hire date</th>
      <th>Leave date</th>
      <th>Del flg</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shains.each do |shain| %>
      <tr>
        <td><%= shain.num %></td>
        <td><%= shain.name_1 %></td>
        <td><%= shain.name_2 %></td>
        <td><%= shain.name_1_kana %></td>
        <td><%= shain.name_2_kana %></td>
        <td><%= shain.busho_id %></td>
        <td><%= shain.shain_kbn %></td>
        <td><%= shain.hire_date %></td>
        <td><%= shain.leave_date %></td>
        <td><%= shain.del_flg %></td>
        <td><%= link_to 'Show', shain %></td>
        <td><%= link_to 'Edit', edit_shain_path(shain) %></td>
        <td><%= link_to 'Destroy', shain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

